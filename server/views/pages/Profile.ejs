<!doctype HTML>
<html>
<head>
    <meta charset="UTF-8">
    <% include ../partials/javascript %>
    <% include ../partials/stylesheet %>
    <% include ../partials/eugenecss %>
    <title><%= title %></title>
</head>
<body>
    <% include ../partials/header %>

    <div class="sidenav" id="sidenav">
        <a href="/profile">Profile</a>
        <a href="/edit/profile">Edit Profile</a>
        <a href="/changePassword">Change Password</a>
        <a href="/2FA">2-Factor Authentication</a>
    </div>

    <div class="body" style="margin-bottom: 80px;">    
        <div class="media" style="position: relative;left:390px;">      
            <div class="media-left">
                <img src="<%= avatar %>" alt="Profile Picture" width="160px" height="160px" style="border: 3px solid black; border-radius: 2px;">
            </div>
            <div class="media-body" style="position: relative;left:50px; font-size: 17px">
                <p style="font-size: 22px"><strong><%= username %></strong></p>
                <p><strong>Email</strong>: <%= email %><br></p>
                <p><strong>Date Joined</strong>: <%= dateJoined %></p>
                <p><strong>Type (Member/Admin)</strong>: <%= type %></p>
                <p><strong>Membership Rank</strong>: <%= membership %></p>
            </div>
        </div>     
    </div>
    <script>
    window.onunload = function(){
        alert("unload event detected!");
    }
</script>
    <% include ../partials/footer %>
</body>  
</html>
